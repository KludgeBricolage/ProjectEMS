<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">
    
<struts>

	<package name="default" extends="struts-default" namespace="/pages">
		<action name="login" class="action.LoginAction">
			<result name="admin" type="redirectAction">
				<param name="actionName">admin</param>
    			<param name="namespace">/admin</param>			
			</result>
			<result name="error">error.jsp</result>
		</action>
	</package>
	
	<package name="admin" extends="struts-default" namespace="/admin">
			<action name="admin" class="action.admin.DatabaseManipulationAction">
				<result name="success">database.jsp</result>
				<result name="error">error.jsp</result>
			</action>
	</package>
</struts>